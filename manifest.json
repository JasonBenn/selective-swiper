{
  "name": "Tinder Keyword Swiper",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Automatically swipe right on Tinder profiles when a keyword match is detected.",
  "homepage_url": "https://jasonbenn.com/post/i-set-up-tinder-web-to-swipe-right-on-cool-people-automatically",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_page": "options.html",
  "page_action": {
    "default_icon": "icons/icon16.png",
    "default_title": "Tinder Keyword Swiper",
    "default_popup": "page_action.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions" : [
    "activeTab",
    "storage",
    "declarativeContent"
  ]
}
